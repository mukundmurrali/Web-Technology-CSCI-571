<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView_similarItemImage"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/textView_title"
            android:layout_alignTop="@+id/imageView_similarItemImage"
            android:layout_toRightOf="@+id/imageView_similarItemImage"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginRight="14dp"
            android:textStyle="bold"
            android:minLines="3"
            android:maxLines="3"
            android:text="TextView"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/textView_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_title"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageView_similarItemImage"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_daysleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_shipping"
            android:layout_alignEnd="@+id/textView_title"
            android:layout_marginEnd="32dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_daysleft"
            android:layout_alignBottom="@+id/imageView_similarItemImage"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="11dp"
            android:text="TextView"
            android:textColor="@color/priceTextColor"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.v7.widget.CardView>