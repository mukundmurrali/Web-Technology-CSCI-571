<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewNoWishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="No Wishes"
        android:textSize="20dp"
        />
    <include
        layout="@layout/layout_recycler_view_results"/>
    <RelativeLayout
        android:id="@+id/relativeLayout_wishlistTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:background="@color/cartOrange">
        <TextView
            android:id="@+id/textView_totalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_alignParentStart="true"
            android:text=" Total"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/textView_totalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:text="$ 0.00"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

</RelativeLayout>